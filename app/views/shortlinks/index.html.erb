<h3>Search for your URL</h3>


<br>
<%= form_tag(shortlinks_path, method: :get) do %>
  <p>
  	<%= label_tag :email, "Your email:" %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :original, "Original URL search:" %>
    <%= text_field_tag :original %>
  </p>
  <p>
    <%= label_tag :shortened, "Shortened URL ('slug') search:" %>
    <%= text_field_tag :shortened %>
  </p>
  <p>
    <%= submit_tag "Search", class: 'btn btn-primary' %>
  </p>
<% end %>

<% if @shortlinks %>
  <p> yo adrian! </p>
  <%= @shortlinks.each do |link| %>
    <%= link.email %>
    <%= link.original %>
    <%= link.shortened %>
  <% end %>
<% end %>
