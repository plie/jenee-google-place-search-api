<br>
<br>
<h3>Search for your URL</h3>


<br>
<%= form_tag(shortlinks_path, method: :get) do %>
  <p>
  	<%= label_tag :email, "Your email:" %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :original, "Original URL search:" %>
    <%= text_field_tag :original %>
  </p>
  <p>
    <%= label_tag :shortened, "Shortened URL ('slug') search:" %>
    <%= text_field_tag :shortened %>
  </p>
  <p>
    <%= submit_tag "Search", class: 'btn btn-success' %>
  </p>
<% end %>

<br>
<br>
<% if @shortlinks %>
  <h3>Saved Short links</h3>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Original URL</th>
        <th scope="col">Short link slug</th>
      </tr>
    </thead>
    <tbody>
      <% @shortlinks.each do |link| %>
        <tr>
          <td><%= link.email %></td>
          <td><%= link.original %></td>
          <td><%= link_to "#{link.shortened}", "/#{link.shortened}", :target => "_blank" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
